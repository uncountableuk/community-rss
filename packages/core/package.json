{
  "name": "@community-rss/core",
  "version": "0.0.0",
  "description": "White-label Astro Integration framework for community content aggregation",
  "type": "module",
  "main": "./index.ts",
  "types": "./index.ts",
  "bin": {
    "community-rss": "./src/cli/init.mjs"
  },
  "exports": {
    ".": "./index.ts",
    "./actions": "./src/actions/index.ts",
    "./layouts/*": "./src/layouts/*",
    "./components/*": "./src/components/*",
    "./styles/*": "./src/styles/*",
    "./templates/email/*": "./src/templates/email/*"
  },
  "files": [
    "index.ts",
    "src/"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@types/sanitize-html": "^2.16.0",
    "better-auth": "^1.4.19",
    "better-sqlite3": "^12.6.2",
    "cheerio": "^1.2.0",
    "drizzle-orm": "^0.38.0",
    "juice": "^11.1.1",
    "node-cron": "^4.2.1",
    "sanitize-html": "^2.17.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node-cron": "^3.0.11",
    "astro": "^5.0.0",
    "drizzle-kit": "^0.30.0",
    "jsdom": "^28.1.0",
    "msw": "^2.12.10"
  },
  "peerDependencies": {
    "astro": "^5.0.0"
  },
  "license": "GPL-3.0",
  "keywords": [
    "astro",
    "astro-integration",
    "rss",
    "community",
    "docker",
    "self-hosted"
  ]
}
