---
/**
 * Magic link email form component.
 *
 * Collects the user's email and sends a magic link request
 * to `/api/auth/sign-in/magic-link`. Shows loading state and
 * success/error messages.
 *
 * @since 0.3.0
 */

interface Props {
  /** Configurable message strings. @since 0.4.0 */
  messages?: {
    emailLabel?: string;
    emailPlaceholder?: string;
    submitLabel?: string;
    successText?: string;
    errorText?: string;
    networkErrorText?: string;
  };
}

const {
  messages: {
    emailLabel = 'Email address',
    emailPlaceholder = 'you@example.com',
    submitLabel = 'Send Magic Link',
    successText = '\u2713 Check your email for a magic link!',
    errorText = 'Failed to send magic link. Please try again.',
    networkErrorText = 'Network error. Please try again.',
  } = {},
} = Astro.props;
---

<form class="crss-magic-link-form" id="crss-magic-link-form" data-error-text={errorText} data-network-error-text={networkErrorText}>
  <div class="crss-form-group">
    <label for="crss-email-input" class="crss-form-label">{emailLabel}</label>
    <input
      type="email"
      id="crss-email-input"
      name="email"
      class="crss-form-input"
      placeholder={emailPlaceholder}
      required
      autocomplete="email"
    />
  </div>

  <button type="submit" class="crss-btn crss-btn--primary" id="crss-submit-btn" data-default-text={submitLabel}>
    {submitLabel}
  </button>

  <div class="crss-form-message crss-form-message--success" id="crss-success-msg" style="display: none;">
    {successText}
  </div>

  <div class="crss-form-message crss-form-message--error" id="crss-error-msg" style="display: none;">
  </div>
</form>

<style>
  .crss-magic-link-form {
    display: flex;
    flex-direction: column;
    gap: var(--crss-space-md);
    max-width: 400px;
    width: 100%;
  }

  .crss-form-group {
    display: flex;
    flex-direction: column;
    gap: var(--crss-space-xs);
  }

  .crss-form-label {
    font-size: var(--crss-font-size-sm);
    font-weight: 500;
    color: var(--crss-text-primary);
  }

  .crss-form-input {
    padding: var(--crss-space-sm) var(--crss-space-md);
    border: 1px solid var(--crss-surface-3);
    border-radius: var(--crss-radius-md);
    font-size: var(--crss-font-size-base);
    font-family: var(--crss-font-family);
    color: var(--crss-text-primary);
    background-color: var(--crss-surface-0);
    transition: border-color var(--crss-transition-fast);
  }

  .crss-form-input:focus {
    outline: none;
    border-color: var(--crss-brand-primary);
    box-shadow: var(--crss-comp-form-focus-ring, 0 0 0 3px var(--crss-focus-ring));
  }

  .crss-btn--primary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--crss-space-sm) var(--crss-space-lg);
    background-color: var(--crss-brand-primary);
    color: var(--crss-text-inverse);
    border: none;
    border-radius: var(--crss-radius-md);
    font-size: var(--crss-font-size-base);
    font-family: var(--crss-font-family);
    cursor: pointer;
    transition: background-color var(--crss-transition-fast);
  }

  .crss-btn--primary:hover {
    background-color: var(--crss-brand-accent);
  }

  .crss-btn--primary:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  .crss-form-message {
    padding: var(--crss-space-sm) var(--crss-space-md);
    border-radius: var(--crss-radius-md);
    font-size: var(--crss-font-size-sm);
  }

  .crss-form-message--success {
    background-color: var(--crss-comp-form-success-bg, var(--crss-success-bg));
    color: var(--crss-comp-form-success-text, var(--crss-success-text));
    border: 1px solid var(--crss-comp-form-success-border, var(--crss-success-border));
  }

  .crss-form-message--error {
    background-color: var(--crss-comp-form-error-bg, var(--crss-error-bg));
    color: var(--crss-comp-form-error-text, var(--crss-error-text));
    border: 1px solid var(--crss-comp-form-error-border, var(--crss-error-border));
  }
</style>

<script>
  const form = document.getElementById('crss-magic-link-form') as HTMLFormElement;
  const submitBtn = document.getElementById('crss-submit-btn') as HTMLButtonElement;
  const successMsg = document.getElementById('crss-success-msg') as HTMLDivElement;
  const errorMsg = document.getElementById('crss-error-msg') as HTMLDivElement;
  const emailInput = document.getElementById('crss-email-input') as HTMLInputElement;

  const defaultText = submitBtn?.dataset.defaultText ?? 'Send Magic Link';
  const errorFallback = form?.dataset.errorText ?? 'Failed to send magic link. Please try again.';
  const networkError = form?.dataset.networkErrorText ?? 'Network error. Please try again.';

  form?.addEventListener('submit', async (e: Event) => {
    e.preventDefault();

    const email = emailInput.value.trim();
    if (!email) return;

    // Reset messages
    successMsg.style.display = 'none';
    errorMsg.style.display = 'none';

    // Loading state
    submitBtn.disabled = true;
    submitBtn.textContent = 'Checking...';

    try {
      // Pre-check: does this email already have an account?
      const checkResponse = await fetch(
        `/api/v1/auth/check-email?email=${encodeURIComponent(email)}`,
        { credentials: 'include' },
      );

      if (checkResponse.ok) {
        const checkData = await checkResponse.json();

        if (!checkData.exists) {
          // New user — redirect to sign-up page with email pre-filled
          window.location.href = `/auth/signup?email=${encodeURIComponent(email)}`;
          return;
        }
      }

      // Existing user — send sign-in magic link
      submitBtn.textContent = 'Sending...';

      const response = await fetch('/api/auth/sign-in/magic-link', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          email,
          callbackURL: '/',
        }),
        credentials: 'include',
      });

      if (response.ok) {
        successMsg.style.display = 'block';
        emailInput.value = '';
      } else {
        const data = await response.json().catch(() => ({}));
        errorMsg.textContent = data.message || errorFallback;
        errorMsg.style.display = 'block';
      }
    } catch {
      errorMsg.textContent = networkError;
      errorMsg.style.display = 'block';
    } finally {
      submitBtn.disabled = false;
      submitBtn.textContent = defaultText;
    }
  });
</script>
