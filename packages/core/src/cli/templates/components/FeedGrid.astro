interface Article {
  id: string;
  title: string;
  summary?: string;
  authorName?: string;
  publishedAt?: Date;
  originalLink?: string;
  feedTitle?: string;
  heartCount?: number;
  starCount?: number;
}

interface Props {
  articles: Article[];
}

const props = Astro.props;
---

<div class="my-feed-grid">
  <CoreFeedGrid {...props} />
</div>

