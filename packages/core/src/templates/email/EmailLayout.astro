---
/**
 * Email layout â€” table-based wrapper for email client compatibility.
 *
 * All styles are inline (concrete values, no CSS custom properties)
 * since most email clients do not support them.
 *
 * Uses a single default `<slot />` to avoid the Container API's
 * nested slot stripping behaviour.
 *
 * @since 0.5.0
 */

interface Props {
  /** Application/community name */
  appName?: string;
}

const { appName = 'Community RSS' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{appName}</title>
</head>
<body style="margin: 0; padding: 0; background-color: #f9fafb; font-family: system-ui, -apple-system, 'Segoe UI', Roboto, sans-serif; -webkit-font-smoothing: antialiased;">
  <table role="presentation" width="100%" cellpadding="0" cellspacing="0" style="background-color: #f9fafb;">
    <tr>
      <td align="center" style="padding: 40px 20px;">
        <table role="presentation" width="600" cellpadding="0" cellspacing="0" style="max-width: 600px; width: 100%; background-color: #ffffff; border-radius: 8px; border: 1px solid #e5e7eb;">
          <!-- Header -->
          <tr>
            <td style="padding: 32px 32px 0 32px;">
              <h1 style="margin: 0 0 24px 0; font-size: 20px; font-weight: 700; color: #4f46e5;">{appName}</h1>
            </td>
          </tr>
          <!-- Content -->
          <tr>
            <td style="padding: 0 32px 32px 32px; font-size: 16px; line-height: 1.6; color: #374151;">
              <slot />
            </td>
          </tr>
          <!-- Footer -->
          <tr>
            <td style="padding: 24px 32px; border-top: 1px solid #e5e7eb; font-size: 12px; color: #9ca3af; text-align: center;">
              <p style="margin: 0;">Sent by {appName}</p>
            </td>
          </tr>
        </table>
      </td>
    </tr>
  </table>
</body>
</html>
