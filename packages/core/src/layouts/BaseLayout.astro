---
/**
 * Base layout for Community RSS pages.
 *
 * Injects the CSS design token stylesheet and provides a minimal
 * HTML shell. All framework pages extend this layout.
 *
 * @since 0.1.0
 */

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Community RSS' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  @import '../styles/tokens.css';

  *,
  *::before,
  *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    font-family: var(--crss-font-family);
    font-size: var(--crss-font-size-base);
    color: var(--crss-text-primary);
    background-color: var(--crss-surface-0);
    line-height: 1.6;
  }
</style>
