# ─── Database ──────────────────────────────────────────
# Path to SQLite database file (relative to playground/)
DATABASE_PATH=./data/community.db

# ─── FreshRSS ─────────────────────────────────────────
FRESHRSS_URL=http://freshrss:80
FRESHRSS_USER=admin
FRESHRSS_API_PASSWORD=adminadminadmin

# ─── Site ──────────────────────────────────────────────
# Must match the externally-accessible origin (critical for auth)
PUBLIC_SITE_URL=http://localhost:4321

# ─── Email (SMTP — Mailpit in local dev) ──────────────
SMTP_HOST=mailpit
SMTP_PORT=1025
SMTP_FROM=noreply@localhost

# ─── S3-Compatible Storage (MinIO in local dev) ───────
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=localadmin
S3_SECRET_KEY=localpassword
S3_BUCKET=community-images

# ─── Media URLs ───────────────────────────────────────
MEDIA_BASE_URL=http://localhost:9000/community-images
